<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="WWFDonationPlugin\Subscriber\Storefront\Subscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="WWFDonationPlugin\Service\Logger" class="Monolog\Logger">
            <factory service="Shopware\Core\Framework\Log\LoggerFactory" method="createRotating"/>
            <argument type="string">wwf_logs</argument>
        </service>

        <service id="Shopware\Core\Content\Product\DataAbstractionLayer\StockUpdater"
                 class="WWFDonationPlugin\Subscriber\WWFProductStockUpdater" public="true">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\Content\Product\ProductDefinition"/>
            <argument type="service" id="Shopware\Core\Framework\Adapter\Cache\CacheClearer"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Cache\EntityCacheKeyGenerator"/>
            <argument type="service" id="WWFDonationPlugin\Service\Logger"/>
            <argument type="service" id="product.repository"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service class="WWFDonationPlugin\Service\CharityCampaignManager"
                 id="WWFDonationPlugin\Service\CharityCampaignManager" public="true">
        </service>

        <service id="WWFDonationPlugin\Service\DonationPluginInstance" public="true">
        </service>

        <service id="WWFDonationPlugin\Service\MediaService" lazy="false" public="true">
            <argument id="WWFDonationPlugin\Service\DonationPluginInstance"/>
            <argument id="media.repository"/>
            <argument id="media_folder.repository"/>
            <argument id="product_media.repository"/>
            <argument type="service" id="Shopware\Core\Content\Media\File\FileSaver"/>
        </service>

        <service id="WWFDonationPlugin\Service\ProductService" lazy="false" public="true">
            <argument type="service" id="WWFDonationPlugin\Service\CharityCampaignManager"/>
            <argument id="tax.repository"/>
            <argument id="product.repository"/>
            <argument id="product_category.repository"/>
            <argument id="product_manufacturer.repository"/>
            <argument id="sales_channel.repository"/>
            <argument id="WWFDonationPlugin\Service\MediaService"/>
        </service>
    </services>
</container>