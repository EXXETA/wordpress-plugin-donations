{
  "name": "wwf-banner-core-assets",
  "version": "1.0.0",
  "description": "Central asset package for wwf-banner-core",
  "private": true,
  "scripts": {
    "clean": "node_modules/.bin/rimraf dist",
    "assemble": "shx mkdir -p dist && shx mkdir -p dist/images && npm run styles && npm run copy:assets",
    "styles": "node_modules/.bin/node-sass --output-style compressed styles/banner.scss > dist/banner.css",
    "stylewatch": "node_modules/.bin/node-sass -w --output-style compressed styles/banner.scss > dist/banner.css",
    "copy:assets": "shx cp -fr images/* dist/images"
  },
  "author": "EXXETA AG",
  "license": "GPL-3.0",
  "devDependencies": {
    "node-sass": "^5.0.0",
    "rimraf": "^3.0.2",
    "shx": "^0.3.3"
  }
}
